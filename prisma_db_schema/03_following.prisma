// Social follow system (like Instagram/Twitter).
model Following {
  followingUserId String   @db.Uuid @map("following_user_id")
  followedUserId  String   @db.Uuid @map("followed_user_id")
  createdAt       DateTime @default(now()) @map("created_at")

  followingUser User @relation("following_user", fields: [followingUserId], references: [id])
  followedUser  User @relation("followed_user",  fields: [followedUserId],  references: [id])

  @@id([followingUserId, followedUserId])
  @@index([followingUserId], name: "idx_following")
  @@index([followedUserId],  name: "idx_followed")
  @@map("follows")
}
